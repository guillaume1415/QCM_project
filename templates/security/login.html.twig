{% extends 'base.html.twig' %}

{% block title %}Connexion | QCM Land{% endblock %}

{% block body %}
    <div class="container containerLogin my-5 px-5 py-4 bg-white">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
        <h3 class="containerLogin-title">Connection</h3>
        <form action="{{ path('login') }}" method="post">

            <div class="form-group ">
                <label for="username">pseudo ou email</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" aria-describedby="emailHelp" autocomplete="email" required autofocus>
{#                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>#}
            </div>
            <div class="form-group">
                <label for="password">password</label>
                <input type="password" class="form-control" id="password" name="_password" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# <label for="inputEmail">Email</label> #}
            {# <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus> #}
            {# <label for="inputPassword">Password</label> #}
            {# <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required> #}
            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html


            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>#}

            <div class="block-btn">
                <button type="submit" class="btn btn-custome btn-block">Connection</button>
            </div>
        </form>
    </div>
{% endblock %}
