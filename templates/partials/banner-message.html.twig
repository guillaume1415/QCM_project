{% if messages is defined %}
    {% for messages in message %}
            <div class="alert alert- alert-dismissible fade show">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
    {% endfor %}
{% endif %}
